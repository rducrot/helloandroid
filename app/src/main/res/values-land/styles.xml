<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mainWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rootView" parent="mainMatchParent">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="mainView" parent="mainMatchParent">
        <item name="android:background">@drawable/background_color</item>
    </style>

    <style name="logoImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/biggerMargin</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/largerMargin</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="addressContainer" parent="mainWrapContent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/address_container</item>
        <item name="android:layout_marginEnd">@dimen/mainMargin</item>
        <item name="android:layout_marginStart">@dimen/mainMargin</item>
        <item name="android:layout_marginTop">@dimen/containerMarginLand</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="nameText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/nameTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/name_container</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/mainPadding</item>
    </style>

    <style name="contact_container" parent="mainMatchParent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/mainMargin</item>
        <item name="android:layout_marginRight">@dimen/biggerMargin</item>
        <item name="android:layout_marginLeft">@dimen/biggerMargin</item>
        <item name="android:layout_marginBottom">@dimen/biggerMargin</item>
    </style>

    <style name="contactText" parent="mainWrapContent">
        <item name="android:textSize">@dimen/regularTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/mainMargin</item>
        <item name="android:drawablePadding">@dimen/biggerPadding</item>
    </style>

    <style name="illustrationContainer">
        <item name="android:layout_width">@dimen/illustrationSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/biggerMargin</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="illustrationImage">
        <item name="android:layout_width">@dimen/illustrationSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:alpha">0.55</item>
        <item name="android:layout_marginBottom">@dimen/mainMargin</item>
        <item name="android:layout_marginEnd">@dimen/largeMargin</item>
        <item name="android:layout_marginStart">@dimen/largeMargin</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="illustrationText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mainMargin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/mainMargin</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
